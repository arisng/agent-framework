@using System
@using System.Text.Json
@using AGUIWebChat.Client.Services
@inject IComponentRegistry ComponentRegistry

@if (ResolvedComponentType is not null)
{
    <DynamicComponent Type="@ResolvedComponentType" Parameters="@ComponentParameters" />
}
else
{
    <div class="assistant-message assistant-unsupported">
        <div>
            <div class="assistant-message-icon">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9 6h.008v.008H12v-.008Z" />
                </svg>
            </div>
        </div>
        <div class="assistant-message-header">Unsupported content</div>
        <div class="assistant-message-text">
            <div><strong>Media type:</strong> @MediaType</div>
            @if (!string.IsNullOrWhiteSpace(FallbackPreview))
            {
                <pre>@FallbackPreview</pre>
            }
        </div>
    </div>
}

@code {
    private static readonly JsonSerializerOptions PreviewSerializerOptions = new() { WriteIndented = true };

    [Parameter, EditorRequired]
    public required object Data { get; set; }

    [Parameter, EditorRequired]
    public required string MediaType { get; set; }

    private Type? ResolvedComponentType =>
        ComponentRegistry.TryGetComponentType(MediaType, out Type? componentType) ? componentType : null;

    private IDictionary<string, object> ComponentParameters => new Dictionary<string, object>
    {
        ["Data"] = Data,
        ["MediaType"] = MediaType
    };

    private string? FallbackPreview => FormatFallbackPreview(Data);

    private static string? FormatFallbackPreview(object data)
    {
        if (data is null)
        {
            return null;
        }

        if (data is string text)
        {
            return TryFormatJson(text, out string formatted) ? formatted : text;
        }

        if (data is JsonElement jsonElement)
        {
            return JsonSerializer.Serialize(jsonElement, PreviewSerializerOptions);
        }

        try
        {
            return JsonSerializer.Serialize(data, PreviewSerializerOptions);
        }
        catch (NotSupportedException)
        {
            return data.ToString();
        }
    }

    private static bool TryFormatJson(string text, out string formatted)
    {
        formatted = text;
        if (string.IsNullOrWhiteSpace(text))
        {
            return false;
        }

        try
        {
            using JsonDocument document = JsonDocument.Parse(text);
            formatted = JsonSerializer.Serialize(document.RootElement, PreviewSerializerOptions);
            return true;
        }
        catch (JsonException)
        {
            return false;
        }
    }
}
