@using System.Text.Json
@using Microsoft.Extensions.AI

@* User-friendly display for create_plan tool call *@
@if (Call is not null)
{
    <div class="assistant-message assistant-tool-call">
        <div>
            <div class="assistant-message-icon">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h3.75M9 15h3.75M9 18h3.75m3 .75H18a2.25 2.25 0 0 0 2.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 0 0-1.123-.08m-5.801 0c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 0 0 .75-.75 2.25 2.25 0 0 0-.1-.664m-5.8 0A2.251 2.251 0 0 1 13.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m0 0H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V9.375c0-.621-.504-1.125-1.125-1.125H8.25ZM6.75 12h.008v.008H6.75V12Zm0 3h.008v.008H6.75V15Zm0 3h.008v.008H6.75V18Z" />
                </svg>
            </div>
        </div>
        <div class="assistant-message-header">Creating Plan</div>
        <div class="assistant-message-text">
            @if (stepCount > 0)
            {
                <div>Creating a plan with @stepCount @(stepCount == 1 ? "step" : "steps")...</div>
            }
            else
            {
                <div>Creating a plan...</div>
            }
        </div>
    </div>
}

@code {
    /// <summary>
    /// Registry component contract: Data object (FunctionCallContent for create_plan call)
    /// </summary>
    [Parameter, EditorRequired]
    public required object Data { get; set; }

    /// <summary>
    /// Registry component contract: Media type identifier
    /// </summary>
    [Parameter]
    public string MediaType { get; set; } = ToolContentMediaTypes.PlanCall;

    private FunctionCallContent? Call => Data as FunctionCallContent;

    private int stepCount
    {
        get
        {
            if (Call?.Arguments is null)
            {
                return 0;
            }

            // Try to get the "steps" array from Arguments
            if (Call.Arguments.TryGetValue("steps", out object? stepsValue))
            {
                // Handle JsonElement array
                if (stepsValue is JsonElement stepsElement && stepsElement.ValueKind == JsonValueKind.Array)
                {
                    return stepsElement.GetArrayLength();
                }

                // Handle direct array or collection
                if (stepsValue is System.Collections.ICollection collection)
                {
                    return collection.Count;
                }

                // Handle enumerable (fallback)
                if (stepsValue is System.Collections.IEnumerable enumerable)
                {
                    int count = 0;
                    foreach (var _ in enumerable)
                    {
                        count++;
                    }
                    return count;
                }
            }

            return 0;
        }
    }
}
