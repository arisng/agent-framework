{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.AspNetCore.HttpLogging.HttpLoggingMiddleware": "Information",
      "Microsoft.Agents": "Debug"
    }
  },
  
  // JWT settings for local development (use simple key for testing)
  // SECURITY: Never use this key in production!
  "Jwt": {
    "SigningKey": "dev-only-signing-key-do-not-use-in-production-min-256-bits!"
  },
  
  // Enable detailed errors in development
  "Features": {
    "EnableDetailedErrors": true,
    "RequireAuthentication": false
  }
  
  // ==========================================================================
  // LOCAL DEVELOPMENT SETUP
  // ==========================================================================
  // 1. Copy appsettings.Localhost.json.template to appsettings.Localhost.json
  // 2. Add your actual API keys to appsettings.Localhost.json
  // 3. appsettings.Localhost.json is git-ignored for security
  //
  // Or set environment variables:
  //   export OPENAI_API_KEY=sk-your-key-here
  // ==========================================================================
}
