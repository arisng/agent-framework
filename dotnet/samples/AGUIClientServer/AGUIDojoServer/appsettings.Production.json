{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Agents": "Information"
    }
  },
  
  // JWT settings - SigningKey MUST be set via environment variable
  // Set: Jwt__SigningKey=<your-production-256-bit-secret-key>
  "Jwt": {
    "Issuer": "AGUIDojoServer",
    "Audience": "AGUIDojoClient",
    "ExpirationMinutes": 30
  },
  
  // Production feature flags
  "Features": {
    "EnableDetailedErrors": false,
    "RequireAuthentication": true
  }
  
  // ==========================================================================
  // PRODUCTION ENVIRONMENT VARIABLES
  // ==========================================================================
  // Required:
  //   OPENAI_API_KEY           - OpenAI API key
  //   OR
  //   AZURE_OPENAI_ENDPOINT    - Azure OpenAI endpoint
  //   AZURE_OPENAI_API_KEY     - Azure OpenAI key (or use Managed Identity)
  //
  //   Jwt__SigningKey          - JWT signing key (min 256 bits)
  //
  // Optional:
  //   AZURE_OPENAI_DEPLOYMENT  - Deployment name (default: gpt-4o)
  //   ASPNETCORE_URLS          - Server URLs (default: http://+:5100)
  // ==========================================================================
}
