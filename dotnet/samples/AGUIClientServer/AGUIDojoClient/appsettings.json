{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp.ReverseProxy": "Information"
    }
  },
  "AllowedHosts": "*",
  
  // ==========================================================================
  // SERVER CONNECTION SETTINGS
  // ==========================================================================
  // The SERVER_URL setting is used by the direct HttpClient for AG-UI SSE endpoints.
  // Override via environment variable: SERVER_URL=http://your-backend:5100
  "SERVER_URL": "http://localhost:5100",
  
  // ==========================================================================
  // YARP REVERSE PROXY CONFIGURATION
  // ==========================================================================
  // YARP proxies /api/* requests to the backend server.
  // AG-UI SSE endpoints use direct HttpClient (not YARP) for optimal streaming.
  //
  // Override backend URL via environment variable:
  //   ReverseProxy__Clusters__backend__Destinations__primary__Address=https://api.example.com/
  // ==========================================================================
  "ReverseProxy": {
    "Routes": {
      "apiRoute": {
        "ClusterId": "backend",
        "Match": {
          "Path": "/api/{**remainder}"
        }
      }
    },
    "Clusters": {
      "backend": {
        "Destinations": {
          "primary": {
            "Address": "http://localhost:5100/"
          }
        },
        "HttpRequest": {
          "ActivityTimeout": "00:10:00"
        }
      }
    }
  },
  
  // Feature flags (can be overridden per environment)
  "Features": {
    "EnableDetailedErrors": false
  }
}
