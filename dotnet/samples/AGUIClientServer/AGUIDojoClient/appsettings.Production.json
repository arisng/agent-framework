{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Yarp.ReverseProxy": "Information"
    }
  },
  
  // ==========================================================================
  // PRODUCTION ENVIRONMENT VARIABLES
  // ==========================================================================
  // Required:
  //   SERVER_URL                                                    - Backend server URL for AG-UI SSE
  //   ReverseProxy__Clusters__backend__Destinations__primary__Address - Backend URL for YARP proxy
  //
  // Example:
  //   SERVER_URL=https://api.production.example.com
  //   ReverseProxy__Clusters__backend__Destinations__primary__Address=https://api.production.example.com/
  //
  // Optional:
  //   ASPNETCORE_URLS           - BFF server URLs (default: http://+:5001)
  // ==========================================================================
  
  // Production feature flags
  "Features": {
    "EnableDetailedErrors": false
  }
  
  // NOTE: YARP Routes and Clusters are inherited from appsettings.json
  // Only the Destinations Address needs to be overridden via environment variable
}
