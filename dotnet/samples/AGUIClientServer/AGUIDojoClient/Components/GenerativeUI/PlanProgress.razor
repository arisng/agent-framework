@using AGUIDojoClient.Models

@* Plan Progress Component - Renders a Plan with steps and their current status *@
<div class="plan-progress">
    <div class="plan-header">
        <div class="plan-icon">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h3.75M9 15h3.75M9 18h3.75m3 .75H18a2.25 2.25 0 0 0 2.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 0 0-1.123-.08m-5.801 0c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 0 0 .75-.75 2.25 2.25 0 0 0-.1-.664m-5.8 0A2.251 2.251 0 0 1 13.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m0 0H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V9.375c0-.621-.504-1.125-1.125-1.125H8.25ZM6.75 12h.008v.008H6.75V12Zm0 3h.008v.008H6.75V15Zm0 3h.008v.008H6.75V18Z" />
            </svg>
        </div>
        <span class="plan-title">Execution Plan</span>
        <span class="plan-progress-indicator">@CompletedCount / @Plan.Steps.Count completed</span>
    </div>
    <div class="plan-steps">
        @for (int i = 0; i < Plan.Steps.Count; i++)
        {
            var step = Plan.Steps[i];
            var stepNumber = i + 1;
            <div class="plan-step @(step.Status == StepStatus.Completed ? "step-completed" : "step-pending")">
                <div class="step-indicator">
                    @if (step.Status == StepStatus.Completed)
                    {
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="step-check">
                            <path stroke-linecap="round" stroke-linejoin="round" d="m4.5 12.75 6 6 9-13.5" />
                        </svg>
                    }
                    else
                    {
                        <span class="step-number">@stepNumber</span>
                    }
                </div>
                <div class="step-content">
                    <span class="step-description">@step.Description</span>
                    <span class="step-status">@(step.Status == StepStatus.Completed ? "Completed" : "Pending")</span>
                </div>
            </div>
        }
    </div>
</div>

@code {
    /// <summary>
    /// The plan to display.
    /// </summary>
    [Parameter, EditorRequired]
    public required Plan Plan { get; set; }

    /// <summary>
    /// Gets the count of completed steps.
    /// </summary>
    private int CompletedCount => Plan.Steps.Count(s => s.Status == StepStatus.Completed);
}
