{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.AspNetCore.SignalR": "Information",
      "Yarp.ReverseProxy": "Information"
    }
  },
  
  // Development server connection - localhost
  "SERVER_URL": "http://localhost:5100",
  
  // YARP configuration for development
  "ReverseProxy": {
    "Clusters": {
      "backend": {
        "Destinations": {
          "primary": {
            "Address": "http://localhost:5100/"
          }
        }
      }
    }
  },
  
  // Enable detailed errors in development
  "Features": {
    "EnableDetailedErrors": true
  }
}
